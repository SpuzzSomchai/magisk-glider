# at least one forwarder is required
forward=
# more forwarder for high availability
# forward=

# for more settings head to:
# https://github.com/nadoo/glider

strategy=lha
checkinterval=120
checktolerance=50
checkdisabledonly=true

# dedicated upstream dns server
dnsserver=1.1.1.1:53

# add resolved ip to ipset
ipset=glider

# include domainname list
include=proxy.list
include=proxy-custom.list
